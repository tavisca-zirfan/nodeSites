script#eventThumbnailViewTemplate(type="text/template")
  .events
    .row.pad0-left
      .col-xs-1
        span.glyphicon.glyphicon-calendar
      .col-xs-10
        span.font-16
          a(href='#') {{attributes.name}}
        |  On 
      
    .row.pad0-left    
      .col-xs-10.col-xs-offset-1
        span.text-muted.font-10 {{x 'moment(this.attributes.when).format("Do MMMM YYYY")'}}


script#eventListViewTemplate(type="text/template")
  .row.event-card.pad0-top
    .col-md-12
      h3 Upcoming Events
  .event-list
  .row
    .col-md-12
      a#btnPlanEvent(href='#') Create an event

script#eventEditViewTemplate(type="text/template")
  #eventModal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
          h4.modal-title Create an Event
        .modal-body
          .row
            .col-md-6
              .form-group
                input.form-control#eventName(type='text', placeholder='Event Name')
            .col-md-6
              .form-group
                input.form-control#eventLocation(type='text', placeholder='Event Location')
          .row
            .col-md-6
              .form-group
                input#eventDate.form-control(type='text', placeholder='Event Date')
          .row
            .col-md-12
              .form-group
                textarea.form-control#eventDescription(placeholder='Description')
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Close
          button.btn.btn-primary#btnEventSave(type='button') Save changes



